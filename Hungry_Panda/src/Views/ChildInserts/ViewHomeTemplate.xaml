<UserControl x:Class="Hungry_Panda.ViewHomeTemplate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="511" d:DesignWidth="320">
    <Grid Background="White">
        <StackPanel Name="recipeList" HorizontalAlignment="Center" MinHeight="417" VerticalAlignment="Top" MouseUp="RecipeList_MouseUp" Margin="-9,90,0,0"/>
        <Label Content="Welcome!" Background="White" Margin="0,0,0,0" VerticalAlignment="Top" VerticalContentAlignment="Bottom" Height="52" FontSize="24" HorizontalContentAlignment="Center"/>
        <Label Name="paneLabel" Background="White" Content="Dishes of the Day..." Margin="0,43,0,0" VerticalAlignment="Top" Height="42" FontSize="24" HorizontalContentAlignment="Center"/>
        <Label Name="NoRecipes" Content="No Recipes..." Margin="0,186,0,0" VerticalAlignment="Top" FontSize="24" HorizontalContentAlignment="Center" Visibility="Hidden" TextElement.Foreground="Red" />
    </Grid>
</UserControl>
